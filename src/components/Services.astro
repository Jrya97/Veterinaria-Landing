---
import { Image } from 'astro:assets';
import Mgeneral from '../assets/MGeneral.webp';
import Vacunacion from '../assets/Vacunacion.webp';
import CAvanada from '../assets/CAvanzada.webp';
import SPA from '../assets/SPA.webp'; 


const services = [
  {
    title: "Medicina General",
    description: "Diagnóstico y tratamiento integral para asegurar la salud de tu mascota.",
    image: Mgeneral,
    icon: "/Doctor.svg"
  },
  {
    title: "Vacunación",
    description: "Protección completa contra enfermedades con nuestros planes de vacunación.",
    image: Vacunacion,
    icon: "/Injection.svg"
  },
  {
    title: "Cirugía Avanzada",
    description: "Quirófano de alta tecnología para procedimientos seguros y efectivos.",
    image: CAvanada,
    icon: "/Hospital.svg"
  },
  {
    title: "Spa y Peluquería",
    description: "Tratamientos estéticos y relajantes para que luzcan y se sientan genial.",
    image: SPA,
    icon: "/Scissors.svg"
  }
];
---

<section id="servicios" class="py-24 bg-gray-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-20">
      <span class="text-teal-600 font-bold tracking-widest uppercase text-sm bg-teal-100 px-3 py-1 rounded-full">Nuestros Servicios</span>
      <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mt-4 mb-4">Cuidado Integral</h2>
      <p class="text-gray-600 max-w-2xl mx-auto text-lg">Todo lo necesario para que tu mascota viva una vida larga, saludable y feliz.</p>
    </div>

    <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map(service => (
        <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-2xl transition-all duration-300 transform hover:-translate-y-2 relative service-card opacity-0">
          <div class="h-48 overflow-hidden relative">
            <div class="absolute inset-0 bg-teal-900/20 group-hover:bg-teal-900/0 transition-all duration-300 z-10"></div>
            <Image src={service.image} alt={service.title} class="w-full h-full object-cover transform group-hover:scale-110 transition duration-700" />
            <div class="absolute bottom-4 right-4 bg-white/40 w-12 h-12 rounded-full flex items-center justify-center shadow-md z-20 text-2xl group-hover:bg-white/60 group-hover:-translate-y-13 group-hover:rotate-360 transition-all duration-400 ">
              <img src={service.icon} alt={service.title} class="w-6 h-6" />
            </div>
          </div>
          <div class="p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-3 group-hover:text-teal-600 transition-all duration-300">{service.title}</h3>
            <p class="text-gray-600 leading-relaxed">{service.description}</p>
            <a href="#contacto" class="inline-block mt-4 text-teal-600 font-semibold text-sm hover:underline">Saber más →</a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>